<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_register_edittext">

    <EditText
        android:id="@+id/clearable_edit_text_edit_text"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:paddingEnd="36dp"
        android:background="@null"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:textSize="13dp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="@color/Black"
        android:lineSpacingExtra="4dp"
        android:inputType="text"
        android:singleLine="true"
        android:textColorHint="@color/Black40"
        android:textCursorDrawable="@drawable/cursor_base"/>

    <ImageButton
        android:id="@+id/clearable_edit_text_btn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:padding="0dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:background="@drawable/ic_clear_x_padded_70blue"/>


</RelativeLayout>